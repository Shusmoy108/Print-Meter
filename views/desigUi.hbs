<div class="container">

    <div class="col-sm-3 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Print Meter</h1>

        <!-- show any messages that come back with authentication -->
        {{#if message }}
        <div class="alert alert-danger">{{ message}}</div>
        {{/if}}

        <!-- LOGIN FORM -->
        <form action="/design/insert" method="post">
            <div class="form-group">
                <label>Invoice Number</label>
                <input type="number" class="form-control" name="invoiceNumber">
            </div>
            <div class="form-group">
                <label>Item Number</label>
                <input type="number" class="form-control" name="itemNumber">
            </div>
            <div class="form-group">
                <label>Plate Number</label>
                <input type="number" class="form-control" name="plateNumber">
            </div>
            <div class="form-group">
                <label>Paper Length</label>
                <input type="number" class="form-control" name="paperLength">
            </div>
            <div class="form-group">
                <label>Paper Width</label>
                <input type="number" class="form-control" name="paperWidth">
            </div>
            <div class="form-group">
                <label>Gripper </label>
                <input type="text" class="form-control" name="gripper">
            </div>
            <div class="form-group">
                <label>Sheet</label>
                <input type="number" class="form-control" name="sheet">
            </div>
            <div class="form-group">
                <label>Side</label>
                <input type="type" class="form-control" name="side">
            </div>
            <div class="form-group">
                <label>Number of Impressions</label>
                <input type="number" class="form-control" name="impressions">
            </div>
            <div class="form-group">
                <label>Deadline</label>
                <input type="datetime-local" class="form-control" name="deadline">
            </div>
            <button type="submit" class="btn btn-warning btn-lg">Submit</button>
        </form>
        <hr>
    </div>
</div>